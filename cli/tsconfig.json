{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",

    "strict": true,

    "esModuleInterop": true,
    "declaration": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "src/open-file-exporer.d.ts"]
  },
  "ts-node": {
    "files": true
  },
  "files": ["src/open-file-explorer.d.ts", "src/index.ts"],
  "include": ["src/**/*.ts"]
}
